<form method="post" action="/topics/<%= @topic.id %>">
  <input name="_method" type="hidden" value="patch" />
  <label for="title">Title</label>
  <input class="form-style" id="title" type="text" name="topic[title]" value="<%= @topic.title %>">
  <label for="description">Description</label>
  <textarea class="form-style" id="description" name="topic[description]"><%= @topic.description %></textarea>
  <input type="submit" value="Edit">
</form>