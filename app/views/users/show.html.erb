<h1><strong>Name:</strong> <%= @user.name %> </h1>

<h3><strong>Topics written by <%= @user.name %>:</strong></h3>
<% @user.topics.each do |topic| %>

  <div class="well">
  <p>Topic Title: <%= link_to topic.title, topic_path(topic) %></p>
  <p>Responses for <%= topic.title %>: <% topic.responses.each do |response| %></p>
    <p>Response Title: <%= response.title %></p>
    <p>Response URL: <%= response.url %></p>
    <p>Response Upvotes: <%= response.upvotes.count %></p>
  <% end %>
  </div>
<% end %>


<h3><strong>Responses added by <%= @user.name %>:</strong></h3>
  <% @user.responses.each do |response| %>
  <div class="well">
    <p><strong>Response Title: <%= response.title %></strong></p>
    <p>For Post called: <%= link_to response.topic.title, topic_path(response.topic) %></p>
    <p>Response URL: <%= response.url %></p>
    <p>Response Upvotes: <%= response.upvotes.count %></p>
    </div>
  <% end %>