<p><strong>Title:</strong> <%= @concern.title %></p>
<p><strong>Description:</strong> <%= @concern.description %></p>
<% @concern.responses.each do |response| %>

  <div class="well">
  <p>Response Title: <%= response.title %></p>
  <p>Added by: <%= link_to response.user.name, user_path(response.user) %></p>
  <p>URL: <%= response.url %></p>
  <p>Upvotes: <span id="upvotescountspan" data-responseid="<%= response.id %>"><%= response.upvotes.count %></span></p>
  <input type="button" onclick="upvoteResponse()" value="Upvote">
  </div>
<% end %>

<h2>Add a New Response</h2>
<form method="post" action="/responses">
  <label for="response_title">Response Title</label>
  <input id="response_title" type="text" name="response[title]"><br>
  <label for="response_url">Response URL</label>
  <input id="response_url" type="text" name="response[url]"><br>
  <input name="response[concern_id]" type="hidden" value="<%= @concern.id %>" >
  <input name="response[user_id]" type="hidden" value="<%= session["user_id"] %>" >
  <input type="submit" value="Add Response">
</form>